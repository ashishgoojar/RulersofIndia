<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
	<p>
        <%= @user.name %>
	</p>
	<p>
	VoterID:
	<%= @user.created_at.hour %><%= @user.created_at.day %><%= @user.created_at.month %><%= @user.created_at.year-2000 %><%= @user.created_at.sec %><%= @user.created_at.min %>
	</p>
	<p>
	Constituency:
	<%= @user.constituency %>
	</p>
	<p>
	  <b>Age:
	  <%= @user.age %></b>
	</p>
      </h1>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="span8">
    <%= render 'follow_form' if signed_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>